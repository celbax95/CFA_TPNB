    <link rel="stylesheet" href="{{ asset('css/addAnnoucement/form.css') }}" type="text/css"/>
{% endblock %}

{% block body %}
<div class="addAnnoucement">
    <h2>{{ 'add.titleh2' | trans({},'pages')}}</h2>
