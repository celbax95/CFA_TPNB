{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/common/h2title.css') }}" type="text/css"/>
    <link rel="stylesheet" href="{{ asset('css/security/login.css') }}" type="text/css"/>
{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h2>Connectez-vous</h2>

        <div class="email">
            <input class="input1" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
        </div>

        <div class="password">
            <input class="input1" type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">

        <div class="remember">
            <label>
                Remember me
                <label class="switch">
                    <input type="checkbox" name="_remember_me" checked>
                    <span class="slider round"></span>
                </label>
            </label>
        </div>

        <div class="submit">
            <button class="btn btn-lg btn-primary" type="submit">
                Sign in
            </button>
        </div>
    </form>
{% endblock %}
